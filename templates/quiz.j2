{% extends "layout.j2"%}
{%block content%}
        <h1>Answer & play</h1>
        <section>

            <p class="question">{{question.content}}</p>

            <div>
                <img class="answer_img" src="{{url_for('static', filename=question.picture)}}"  border="0">

            </div>

            <form class="answer_field" method="POST" action="">
                {{ form.hidden_tag() }}

                {{form.current_question}}
                {{form.answer.label()}}
                {{form.answer}}
                {{ form.submit()}}
            </form>



        </section>
        <div>
            <a class="link_style1" href="{{url_for('home')}}">Go back Home page</a>
        </div>
{%endblock content%}